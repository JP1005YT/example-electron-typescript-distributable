{
    "compilerOptions": {
      "target": "ES6",                  // Define a versão do JavaScript a ser gerada
      "module": "CommonJS",              // Electron usa módulos CommonJS
      "strict": true,                    // Modo estrito do TypeScript
      "esModuleInterop": true,           // Permitir interoperabilidade entre módulos ES e CommonJS
      "outDir": "./dist",                // Diretório de saída para os arquivos compilados
      "sourceMap": true,                 // Gera arquivos de mapeamento para depuração
      "skipLibCheck": true               // Ignora checagem de tipos de bibliotecas externas
    },
    "include": ["src/**/*", "server/**/*", "src/index.ts"],          // Inclui todos os arquivos TypeScript da pasta "src"
    "exclude": ["node_modules"]          // Exclui a pasta "node_modules"
  }
  